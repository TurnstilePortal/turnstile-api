{
  "name": "turnstile-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "test": "vitest --run",
    "test:watch": "vitest",
    "coverage": "vitest --run --coverage --reporter=verbose",
    "coverage:ui": "vitest --coverage --ui",
    "lint": "biome lint --fix",
    "format": "biome format --fix",
    "check": "biome check --fix",
    "version": "changeset version && pnpm install --no-frozen-lockfile",
    "publish-packages": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.3.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "author": "",
  "license": "Apache-2.0"
}
